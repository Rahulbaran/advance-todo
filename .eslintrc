{
  "env": {
    "es6": true,
    "browser": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": "eslint/recommended",
  "rules": {
    "func-names": 0,
    "prefer-arrow-callback": 0,
    "no-inline-comments": 2,
    "no-console": 2,
    "no-var": 2,
    "prefer-const": 2,
    "spaced-comment": 2,
    "require-await": 2,
    "eqeqeq": 2,
    "prefer-template": 2,
    "object-shorthand": 2,
    "prefer-spread": 2,
    "prefer-destructuring": 2
  },
  "ignorePatterns": ["dist", "node_modules", "functions"]
}
